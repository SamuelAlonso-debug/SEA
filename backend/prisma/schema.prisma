generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  lastname    String
  email       String   @unique
  password    String   // hash
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sales       Sale[]
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  productCode String   @unique
  category    String?
  price       Float
  stock       Int
  provider    String?
  imageUrl    String?

  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  saleItems   SaleItem[]
}

enum PaymentMethod {
  CASH   // Pago Efectivo
  CARD   // Pago Tarjeta
}

model Sale {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  ticketNumber String         @unique                // Ticket No. 0000001
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  subtotal     Float          // suma de subtotales (sin IVA)
  tax          Float          // IVA calculado
  total        Float          // subtotal + tax

  paymentMethod PaymentMethod // efectivo / tarjeta

  userId       String?        @db.ObjectId
  user         User?          @relation(fields: [userId], references: [id])

  items        SaleItem[]
  notes        String?        // opcional, comentarios internos
}

model SaleItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  saleId      String   @db.ObjectId
  sale        Sale     @relation(fields: [saleId], references: [id])

  productId   String   @db.ObjectId
  product     Product  @relation(fields: [productId], references: [id])

  quantity    Int
  unitPrice   Float   // precio del producto al momento de la venta
  subtotal    Float   // unitPrice * quantity
}

enum ExpenseCategory {
  service    
  merchandise  
  maintenance
  rent
  payroll
  tax
  other  
}

model Expense {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  concept     String          // descripci√≥n corta del gasto
  category    ExpenseCategory
  amount      Float           // monto del gasto en MXN
  date        DateTime        @default(now())
  paymentMethod String?       // Efectivo, Tarjeta, Transferencia...
  vendor      String?         // proveedor (opcional)
  notes       String?         // comentarios internos

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}