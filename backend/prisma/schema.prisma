generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String   @unique
  password    String   // hash
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sales       Sale[]
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  sku         String   @unique
  description String? 
  price       Float    // precio final (sin impuestos extras)
  stock       Int      // existencias actuales
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  saleItems   SaleItem[]
}

model Sale {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime   @default(now())
  total       Float
  // como solo hay Admin, basta con relacionar el user que registr√≥ la venta
  userId      String?    @db.ObjectId
  user        User?      @relation(fields: [userId], references: [id])

  items       SaleItem[]
  notes       String?    // opcional, por si quieres comentarios internos
}

model SaleItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  saleId      String   @db.ObjectId
  sale        Sale     @relation(fields: [saleId], references: [id])

  productId   String   @db.ObjectId
  product     Product  @relation(fields: [productId], references: [id])

  quantity    Int
  unitPrice   Float   // precio del producto al momento de la venta
  subtotal    Float   // unitPrice * quantity
}